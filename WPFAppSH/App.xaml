<Application x:Class="WPFAppSH.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPFAppSH">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="MVVM\Routing.xaml"/>
                <ResourceDictionary Source="Resources/Fonts.xaml"/>
                <ResourceDictionary Source="Resources/Buttons.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BitmapImage x:Key="lightbulb-prp" UriSource="resources/images/lightbulb-purple.png"></BitmapImage>
            <BitmapImage x:Key="lightbulb-sts" UriSource="resources/images/lightbulb-setting.png"></BitmapImage>
            <BitmapImage x:Key="cogwheel-prp" UriSource="resources/images/cogwheel.png"></BitmapImage>
        </ResourceDictionary>
    </Application.Resources>
</Application>
